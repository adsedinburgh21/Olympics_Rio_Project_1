<div class="content">
  <table>
  <caption><h1>Rio 2016 Olympic Games - Nation Medal Table</h1></caption>
    <thead>
      <tr>
        <th>Nation</th>
        <th>Flag</th>
        <th>Gold Medals</th>
        <th>Silver Medals</th>
        <th>Bronze Medals</th>
        <th>Points</th>
      </tr>
    </thead>
    <tbody>
      <% @olympic.order_nations_by_points.each do |nation| %>
      <tr>
        <td><a href="/nations/<%= nation[:id] %>"><%= nation[:name] %></a></td>
        <td><a href="/nations/<%= nation[:id] %>"><img class="nation" src="<%= nation[:flag] %>"></a></td>
        <td><%= @olympic.total_gold( nation[:id] ) %></td>
        <td><%= @olympic.total_silver( nation[:id] ) %></td>
        <td><%= @olympic.total_bronze( nation[:id] ) %></td>
        <td><%= @olympic.total_points( nation[:id] ) %></td>
      </tr>



      <% end %>
    </tbody>

  </table>
</div>